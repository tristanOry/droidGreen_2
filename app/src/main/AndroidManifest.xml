<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.afpa.villagegreen">

    <uses-permission android:name="android.permission.INTERNET"/>
<!-- TODO : Pour la mise en prod, supprimer android:usesCleartextTraffic="true" pour interdire
            le trafic http non sécurisé dans les version 8+ d'android ou basculer à "false"
            pour les version 7.x- -->

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".acivities.Choice" />
        <activity android:name=".acivities.Facture" />
        <activity android:name=".acivities.Catalog" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acivities.Login" />
    </application>

</manifest>